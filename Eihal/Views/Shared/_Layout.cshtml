  cursor: pointer;
}

.custom-notification-list {
  padding: 10px;
}

.custom-notification-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 10px;
}

.custom-notification-icon {
  flex: 0 0 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10px;
  color: #007bff;
}

.custom-notification-content {
  flex: 1;
}

.custom-notification-message {
  margin: 0;
  font-size: 14px;
  font-weight: 500;
}

.custom-notification-time {
  font-size: 12px;
  color: #777;
}

    </style>

