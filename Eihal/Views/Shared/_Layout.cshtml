  border-radius: 5px;
}

.custom-notification-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  background-color: #007bff;
  color: #fff;
  border-radius: 5px 5px 0 0;
}

.custom-notification-title {
