@model List<Eihal.Data.Entites.UserServices>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    string currentPath = Context.Request.Path.ToString().ToLower();
    string cultureCode = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
    string direction = cultureCode.StartsWith("ar", StringComparison.OrdinalIgnoreCase) ? "rtl" : "ltr";
    string textAlign = direction == "rtl" ? "right" : "left";
    bool isEng = direction == "ltr" ? true : false;
    string marginLeftValue = isEng ? "0%" : "5%";
    string marginRightValue = isEng ? "5%" : "0%";
    string btnDelClass = isEng ? "right-button" : "left-button";

}
<style>
    .close-icon {
        font-size: 14px;
        line-height: 14px;
    }

    .service-info-row {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .service-info-label {
        width: 30%;
        font-size: 14px;
        font-weight: 600;
        color: darkcyan
    }

    .service-info-label-status {
        font-size: 14px;
        font-weight: 600;
        color: darkcyan;
        margin-right: @marginRightValue;
        margin-left: @marginLeftValue;
    }

    .service-info-value {
        font-size: 15px;
        font-weight: 500;
    }

    .service-card {
        background: #f8f9fa box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        position: relative;
        cursor: pointer;
        transition: transform 0.3s ease;
        border-radius: 15%;
        height: 100%;
        background-color: #f8f9fa
    }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .service-card-body {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 15%;
        background-color: #f8f9fa
    }

    .service-card-title {
        color: #333;
        font-size: 18px;
        margin-bottom: 10px;
        color: #00768c;
    }

    .service-card-text {
        color: #666;
        margin-bottom: 5px;
    }

    .dots-container {
        position: absolute;
        top: 0px;
        right: 10px;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .dots-button {
        background: none;
        border: none;
        color: #007bff;
        font-size: 18px;
        padding: 0;
        cursor: pointer;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        position: relative;
        overflow: hidden;
    }

        .dots-button::before {
            content: "";
            position: absolute;
            color: red;
            font-size: 20px;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .dots-button::after {
            content: "";
            position: absolute;
            background-color: #007bff;
            width: 4px;
            height: 4px;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .dots-button::before,
        .dots-button::after {
            border-radius: 50%;
        }

        .dots-button::after {
            top: 54%;
        }

        .dots-button::before {
            top: 46%;
        }

    .activeLink {
        color: #00768c;
        font-weight: bold;
        pointer-events: none;
        cursor: not-allowed;
        background-color: whitesmoke;
    }

    #menu .nav-item:hover {
        background-color: #e0e0e0;
        color: #333;
    }

    .tab-header {
        display: flex;
        justify-content: space-between;
        background-color: #f1f1f1;
    }

    .padding-top-25 {
        padding-top: 25px;
    }

    .tab-button {
        background-color: inherit;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 10px 20px;
        transition: background-color 0.3s;
        border-radius: 12px;
        margin: 5px;
    }

        .tab-button:hover {
            background-color: #ddd;
        }

        .tab-button.active {
            background-color: #00768c;
            color: white;
        }

    .tab-content {
        background-color: #fff;
    }

    .no-results {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        margin-top: 20px;
        padding: 20px;
        font-size: 18px;
    }

        .no-results img {
            width: 15%;
            height: 100%;
            margin-bottom: 10px;
        }

        .no-results p {
            margin: 0;
        }


    .service-sub-title {
        color: darkcyan;
        width: 30%;
        font-size: 14px;
        font-weight: 600;
    }

    .status {
        text-align: center;
        font-size: 10px;
        padding: 4px 6px;
        border-radius: 4px;
        font-weight: bold;
        border-radius: 10%;
    }

    .status-success {
        background-color: #4CAF50;
        color: #ffffff;
        font-size: 12px;
        border-radius: 10%;
    }

    .status-warning {
        background-color: #FFC107;
        color: #ffffff;
        font-size: 12px;
        border-radius: 10%;
    }

    .status-clinical {
        background-color: #efd8e3;
        color: #212529;
        font-size: 12px;
        border-radius: 10%;
    }

    .status-error {
        background-color: #FF0000;
        color: #ffffff;
        font-size: 12px;
        border-radius: 10%;
    }

    .padding-bottom-10 {
        padding-bottom: 10px;
    }

    .currency-amount span {
        /* Style for the currency amount itself */
        color: green; /* Custom color for the currency amount, change as desired */
        font-size: xx-small
    }


    .right-button {
        position: absolute;
        right: 10px;
        top: 15px;
    }

    .left-button {
        position: absolute;
        left: 10px;
        top: 15px;
    }
</style>

<div class="row">
@foreach (var item in Model)
{
   
        <div class="col-md-4 padding-top-25">
            <div class="service-card">
                <div class="service-card-body">
                    <h5 class="service-card-title">
                        <strong>
                            @if (isEng)
                            {
                                @item.TitleEn
                            }
                            else
                            {
                                @item.TitleAr
                            }
                        </strong>
                    </h5>
                    <div class="service-info-row">
                        <div class="service-info-label">@Localizer["Price"]</div>
                        <div class="service-info-value currency-amount">@item.Price <span> @Localizer["SAR"]</span></div>
                    </div>
                </div>
            </div>
        </div>
   
}
</div>

@if (Model.Count <= 0)
{
    <div class="no-results">
        <img src="~/images/NoResult.png" alt="No Results Found Icon">
        <p>@Localizer["NoServiceAdded"]</p>
        <br>
    </div>
}