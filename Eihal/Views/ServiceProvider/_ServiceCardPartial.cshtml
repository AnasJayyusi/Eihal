@model List<Eihal.Data.Entites.UserServices>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<style>
    .close-icon {
        font-size: 14px;
        line-height: 14px;
    }

    .service-info-row {
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

    .service-info-label {
        width: 30%;
        font-size: 14px;
        font-weight:600;
        color: darkcyan
    }

    .service-info-label-status {
        font-size: 14px;
        font-weight: 600;
        color: darkcyan;
        margin-right:5%;
    }

    .service-info-value {
        font-size:18px;
        font-weight:600;
    }

    .service-card {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        position: relative;
        cursor: pointer;
        transition: transform 0.3s ease;
        border-radius: 15%;
        height: 100%;
    }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

    .service-card-body {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 15%;
    }

    .service-card-title {
        color: #333;
        font-size: 18px;
        margin-bottom: 10px;
        color: #00768c;
    }

    .service-card-text {
        color: #666;
        margin-bottom: 5px;
    }

    .dots-container {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .dots-button {
        background: none;
        border: none;
        color: #007bff;
        font-size: 18px;
        padding: 0;
        cursor: pointer;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        position: relative;
        overflow: hidden;
    }

        .dots-button::before {
            content: "";
            position: absolute;
            color: #007bff;
            font-size: 20px;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .dots-button::after {
            content: "";
            position: absolute;
            background-color: #007bff;
            width: 4px;
            height: 4px;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .dots-button::before,
        .dots-button::after {
            border-radius: 50%;
        }

        .dots-button::after {
            top: 54%;
        }

        .dots-button::before {
            top: 46%;
        }

    .activeLink {
        color: #00768c;
        font-weight: bold;
        pointer-events: none;
        cursor: not-allowed;
        background-color: whitesmoke;
    }

    #menu .nav-item:hover {
        background-color: #e0e0e0;
        color: #333;
    }

    .tab-header {
        display: flex;
        justify-content: space-between;
        background-color: #f1f1f1;
    }

    .padding-top-25 {
        padding-top: 25px;
    }

    .tab-button {
        background-color: inherit;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 10px 20px;
        transition: background-color 0.3s;
        border-radius: 12px;
        margin: 5px;
    }

        .tab-button:hover {
            background-color: #ddd;
        }

        .tab-button.active {
            background-color: #00768c;
            color: white;
        }

    .tab-content {
        background-color: #fff;
    }

    .no-results {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        margin-top: 20px;
        padding: 20px;
        font-size: 18px;
    }

        .no-results img {
            width: 80px;
            height: 80px;
            margin-bottom: 10px;
        }

        .no-results p {
            margin: 0;
        }

    .service-sub-title {
        color: darkcyan;
        width: 30%;
        font-size: 14px;
        font-weight: 600;
    }

    .status {
        text-align: center;
        font-size: 10px;
        padding: 4px 6px;
        border-radius: 4px;
        font-weight: bold;
        border-radius:10%;
    }

    .status-success {
        background-color: #4CAF50;
        color: #ffffff;
        font-size:15px;
        border-radius: 10%;
    }

    .status-warning {
        background-color: #FFC107;
        color: #ffffff;
        font-size: 15px;
        border-radius: 10%;
    }

    .status-error {
        background-color: #FF0000;
        color: #ffffff;
        font-size: 15px;
        border-radius: 10%;
    }

    .padding-bottom-10 {
        padding-bottom: 10px;
    }
</style>

@foreach (var item in Model)
{
    if (item.Status != Eihal.Enums.ServicesStatusEnum.Rejected)
    {
        <div class="col-md-3 padding-top-25" >
            <div class="service-card">
                <div class="service-card-body">
                    <h5 class="service-card-title"><strong>@item.TitleEn</strong></h5>
                    <div class="service-info-row">
                        <div class="service-info-label">Price:</div>
                        <div class="service-info-value">@item.Price</div>
                    </div>
                    <div class="service-info-row">
                        <div class="service-info-label">Fee:</div>
                        <div class="service-info-value">@item.Fee</div>
                    </div>
                    <div class="service-info-row">
                        <div class="service-info-label-status">Status:</div>
                        <div class="service-info-value">
                            @if (item.Status == Eihal.Enums.ServicesStatusEnum.Pending)
                            {
                                <span class="status status-warning">@item.Status</span>
                            }
                            else if (item.Status == Eihal.Enums.ServicesStatusEnum.Approved)
                            {
                                <span class="status status-success">@item.Status</span>
                            }
                            else
                            {
                                <span>@item.Status</span>
                            }
                        </div>
                    </div>
                    <div class="dots-container">
                        <button class="dots-button" onclick="deleteService(event,'@item.Id')">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
           <div class="col-md-3 padding-top-25"  data-toggle="modal" onclick="fillRejectionReason('@item.RejectionReason')" data-target="#RejectionReasonModal">
            <div class="service-card">
                <div class="service-card-body">
                    <h5 class="service-card-title"><strong>@item.TitleEn</strong></h5>
                    <div class="service-info-row">
                        <div class="service-info-label">Price:</div>
                        <div class="service-info-value">@item.Price</div>
                    </div>
                    <div class="service-info-row">
                        <div class="service-info-label">Fee:</div>
                        <div class="service-info-value">@item.Fee</div>
                    </div>
                    <div class="service-info-row">
                        <div class="service-info-label">Status:</div>
                        <div class="service-info-value">
                          
                                <span class="status status-error" >@item.Status</span>
                          
                        </div>
                    </div>
                    <div class="dots-container">
                        <button class="dots-button" onclick="deleteService(event,'@item.Id')">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@if (Model.Count <= 0)
{
    <div class="no-results">
        <img src="~/images/NoResult.png" alt="No Results Found Icon">
        <p>No Services Added Yet.</p>
    </div>
}

<!------------------------------ Rejection Reason -------------------->
<div class="modal fade" id="RejectionReasonModal" tabindex="-1" role="dialog" aria-labelledby="RejectionReasonModal" aria-hidden="true">
    <div class="modal-dialog custom-modal-dialog" style="max-width: 400px;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="RejectionReasonModal">Rejection Reason</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                    <!-- Add your modal content here -->
                    <div style="padding: 10px; display: flex; justify-content: center;">
                        <div style="max-width: 300px;">
                            <div class="form-group">
                                <label style="font-weight: bold; color: #00768c;" id="rejectionReason"></label>
                              
                            </div>

                        </div>
                    </div>
            </div>

            <div class="modal-footer" style="text-align:center">
                <button type="button" class="btn btn-danger" data-dismiss="modal" id="close-add-service">Close</button>
            </div>
        </div>
    </div>
</div>


