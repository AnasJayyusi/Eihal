    <script>
       
        function GetOutgoingRequests() {
            var outgoingRequestContainer = $('#outgoingRequestContainer');

            $.ajax({
                url: '/ServiceProvider/GetUserOutgoingRequests', // Replace with the actual URL and action method to fetch the partial view
                type: 'GET',
                success: function (response) {
                    outgoingRequestContainer.html(response);

                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                }
            });
        }
            function GetIncomingRequests() {
            var incomingRequestContainer = $('#incomingRequestContainer');

            $.ajax({
                url: '/ServiceProvider/GetUserIncomingRequests', // Replace with the actual URL and action method to fetch the partial view
                type: 'GET',
                success: function (response) {
                    incomingRequestContainer.html(response);

                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                }
            });
        }
        function setCookie(name, value, days) {
            var expires = "";
            if (days) {
                var date = new Date();
                date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
                expires = "; expires=" + date.toUTCString();
            }
            document.cookie = name + "=" + value + expires + "; path=/";
        }

        $(document).ready(function () {
            // Get the current URL
            var currentUrl = window.location.href;

            // Check if the URL contains a specific segment
            if (currentUrl.includes("Referrals")) {
                // Perform an action when the URL contains "something"
                $("#referrals-li").addClass("activeLink");
                $("#referrals-text").addClass("activeLink");
            } else {
                // Perform a different action when the URL doesn't contain "something"
                console.log("The URL does not contain 'Referrals'.");
            }
            //GetIncomingRequests();
            //$("#btnIncoming").click();
            document.getElementsByClassName('active')[0].click();

    
        })

        function openTab(evt, tabName) {
            // Hide all tab content
            var tabContent = document.getElementsByClassName("tab-content");
            for (var i = 0; i < tabContent.length; i++) {
                tabContent[i].style.display = "none";
            }

            // Remove 'active' class from all tab buttons
            var tabButtons = document.getElementsByClassName("tab-button");
            for (var i = 0; i < tabButtons.length; i++) {
                tabButtons[i].className = tabButtons[i].className.replace(" active", "");
            }

            // Show the selected tab content and set the corresponding button as active
            document.getElementById(tabName).style.display = "block";
            if(tabName == 'tab1'){
                GetIncomingRequests();
            }else{
                GetOutgoingRequests();
            }
            evt.currentTarget.className += " active";
        }

    </script>
